# -*- ruby -*-

require 'rubygems'
require 'hoe'
require './lib/flay.rb'

Hoe.new('flay', Flay::VERSION) do |flay|
  flay.rubyforge_name = 'seattlerb'
  flay.developer('Ryan Davis', 'ryand-ruby@zenspider.com')

  flay.extra_deps << ['sexp_processor', '>= 3.0.0']
  flay.extra_deps << ['ruby_parser',    '>= 1.1.0']
end

